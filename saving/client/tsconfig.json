{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "../../built",
        "lib": [
            "ESNext",
            "dom"
        ],
        "module": "amd",
        "target": "esnext",
        "rootDirs": ["."],
        "baseUrl": ".",
        "jsx": "react",
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strictFunctionTypes": true,
        "noStrictGenericChecks": false,
        "esModuleInterop": true
    }
}
