{
    "compilerOptions": {
        "outDir": "../../built/client",
        "lib": [
            "ESNext",
            "dom"
        ],
        "module": "amd",
        "baseUrl": ".",
        "moduleResolution": "node",
        "target": "esnext",
        "jsx": "react",
        "strict": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strictFunctionTypes": true,
        "noStrictGenericChecks": false,

        "esModuleInterop": true,
        "declaration": true,

        "alwaysStrict": true,
        "strictPropertyInitialization": true,
        "noImplicitOverride": false, // <-- render method on react components
        "strictBindCallApply": true,
        "noImplicitAny": true,
        "noUncheckedIndexedAccess": false // <-- check for undefined anywhere object[key]
    }
}
